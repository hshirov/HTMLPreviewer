@model RenderHTMLViewModel
<form action="" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="row justify-content-md-center mt-3">
        <div class="col-md-12">
            <label asp-for="HTMLCode" class="text-muted">HTML code input:</label>
            <textarea asp-for="HTMLCode" class="htmlInputArea form-control" rows="10" maxlength="2194304"></textarea>
        </div>
        <div class="col-md-12 mt-3 text-center">
            <input type="submit" value="Render" class="btn btn-outline-success mr-1" formaction="/Preview" />
            @if (Model.HTMLCode != null)
            {
                <input type="submit" value="Save" class="btn btn-outline-secondary" formaction="/SaveExample" />
            }
        </div>
    </div>
</form>
@if (Model.HTMLCode != null)
{
    <label class="text-muted">HTML view output:</label>
    <div class="mt-1">
        <iframe class="render-window" srcdoc="@Model.HTMLCode"></iframe>
    </div>
}